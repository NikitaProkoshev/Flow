{
  "name": "Flow",
  "version": "1.0.0",
  "description": "Task Manager Developed by Pvnto",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "deploy": "./deploy.sh",
    "setup-ssl": "./setup-ssl.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop flow-app",
    "pm2:restart": "pm2 restart flow-app",
    "pm2:logs": "pm2 logs flow-app",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "MERN",
    "React"
  ],
  "author": "Nikita Prokoshev <nprokoshev21@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.12",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "fullcalendar": "^6.1.18",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "react-scripts": "^5.0.1",
    "shortid": "^2.2.17"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9"
  }
}
